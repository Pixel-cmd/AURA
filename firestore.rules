rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read other users' basic info (for helper matching)
    match /users/{userId} {
      allow read: if request.auth != null;
    }
    
    // SOS requests - users can create their own, helpers can read nearby ones
    match /sosRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Helper responses
    match /helperResponses/{responseId} {
      allow read, write: if request.auth != null;
    }
    
    // Reputation - read-only for users, write by Cloud Functions only
    match /reputation/{userId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Reports - users can create, admins read (handled by Cloud Functions)
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read: if false; // Admin only via Cloud Functions
    }
    
    // Rate limits - users can read/write their own
    match /rateLimits/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

